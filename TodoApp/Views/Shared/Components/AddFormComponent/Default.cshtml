


      <!-- this form is created for add button -->
  <div class="form-popup" id="AddForm">

    <form asp-action="Create" class="form-add">
      <div class="mb-3">
        <div class="form-group">
          <label for="title">Title</label>
           <input type="text" name="Title" class="form-control mb-2" id="addFormInput">

          <label for="description">Description</label>
          <input type=text name="Description" class="form-control" placeholder="Add Description...">
          
          <label class="my-1 mr-2 mt-3" for="inlineFormCustomSelectPref">Todo Status</label>
          @Html.DropDownList("Status",
                 new List<SelectListItem> {
                     new SelectListItem {
                        Text="Activate",
                        Value="0",
                        
                     },
                     new SelectListItem {
                        Text="Process",
                        Value="1",
                     },

                 },"Select Status",new { @class = "custom-select my-1 mr-sm-2"})

        </div>

      </div>

      <button type="submit" class="btn btn-primary AddFormButton">Submit</button>
      <button type="button" class="btn btn-danger" onclick="closeForm()">Close</button>
    </form>

  </div>