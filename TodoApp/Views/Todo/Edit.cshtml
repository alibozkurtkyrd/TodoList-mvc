@model TodoApp.Models.Todo



    <!-- this form is created for update button -->
    <div class="form-popup-update" id="UpdateForm">

      <form asp-action="Edit" class="form-update">
      <div class="mb-3">
        
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
          <label>Title</label>
          @* <input type="text" name="Title" class="form-control" placeholder="@Model.Title"> *@
           <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          @* <input type="text" name="Description" class="form-control" placeholder="@Model.Description"> *@
          <input asp-for="Description" class="form-control" />
        </div>

        <div class="form-group">
          <label for="Date">Created Date</label>
          <input type="text" name="CreatedDate" class="form-control" value="@Model.CreatedDate" readonly>
          @* <input asp-for="CreatedDate" class="form-control" readonly/> *@
          @* @Html.HiddenFor(m => m.CreatedDate) *@
        </div>

        <label class="my-1 mr-2 mt-2" for="inlineFormCustomSelectPref">Todo Status</label>

        @Html.DropDownList("Status", (IEnumerable<SelectListItem>)ViewBag.Status,  new { @class = "custom-select my-1 mr-sm-2 mb-2"})
       </div>

      <button type="submit" class="btn btn-primary">Submit</button>
       <a asp-action="Index"><button type="button" class="btn btn-danger">Close</button></a>
      
    </form>

    </div>